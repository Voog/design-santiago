:root {
  /* VoogStyle
    "pathI18n": ["main_styles"],
    "titleI18n": "maximum_width",
    "editor": "rangePicker",
    "min": 700,
    "max": 2100,
    "step": 1,
    "unit": "px",
    "scope": "global"
  */
  --main__width: 1090px;
  /* VoogStyle
    "pathI18n": ["main_styles"],
    "titleI18n": "font",
    "editor": "listPicker",
    "list": {{ base_font_set }},
    "featured": true,
    "scope": "global"
  */
  --main__font-family: "Raleway", sans-serif;
  /* VoogStyle
    "pathI18n": ["main_styles", "colors"],
    "titleI18n": "primary_color",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global",
    "boundVariables": [
      "--menu-main__color",
      "--menu-sub__color",
      "--content-item-box__color",
      "--content-area-article-date__color",
      "--content-area-text__color",
      "--content-area-table__border-color",
      "--content-area-form-field-label__color",
      "--content-area-form-field-text__color",
      "--layout-footer__color"
    ]
  */
  --main__color-primary: #000;
  /* VoogStyle
    "pathI18n": ["main_styles", "colors"],
    "titleI18n": "secondary_color",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global",
    "boundVariables": [
      "--title__color",
      "--heading__color",
      "--subheading__color",
      "--content-area-article-title__color",
      "--content-area-product-title__color",
      "--content-area-link__color",
      "--content-area-button__background-color"
    ]
  */
  --main__color-secondary: #ed1c24;
  /* VoogStyle
    "pathI18n": ["main_styles", "colors"],
    "titleI18n": "background_color",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global"
  */
  --main__background-color: transparent;
}