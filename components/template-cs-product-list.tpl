:root {
  /* VoogStyle
    "pathI18n": ["product_list"],
    "titleI18n": "max_nr_of_columns",
    "editor": "listPicker",
    "list": {{ base_number_of_columns_set }},
    "featured": true,
    "scope": "global"
  */
  --content-item-box__width: 33.3%;
  /* VoogStyle
    "pathI18n": ["product_list", "product"],
    "titleI18n": "image_radius",
    "editor": "rangePicker",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "%",
    "scope": "global"
  */
  --content-item-box__image-radius: 0;
  /* VoogStyle
    "pathI18n": ["product_list", "product"],
    "titleI18n": "alignment",
    "editor": "listPicker",
    "list": {{ base_alignment_set }},
    "scope": "global"
  */
  --content-item-box__alignment: left;
  /* VoogStyle
    "pathI18n": ["product_list", "product", "normal"],
    "titleI18n": "font_size",
    "editor": "rangePicker",
    "min": 8,
    "max": 100,
    "unit": "px",
    "featured": true,
    "scope": "global"
  */
  --content-item-box__font-size: 20px;
  /* VoogStyle
    "pathI18n": ["product_list", "product", "normal"],
    "titleI18n": "font_weight",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "700",
      "off": "400"
    },
    "icon": "bold",
    "scope": "global"
  */
  --content-item-box__font-weight: 400;
  /* VoogStyle
    "pathI18n": ["product_list", "product", "normal"],
    "titleI18n": "font_style",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "italic",
      "off": "normal"
    },
    "icon": "italic",
    "scope": "global"
  */
  --content-item-box__font-style: normal;
  /* VoogStyle
    "pathI18n": ["product_list", "product", "normal"],
    "titleI18n": "text_decoration",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "underline",
      "off": "none"
    },
    "icon": "underline",
    "scope": "global"
  */
  --content-item-box__text-decoration: none;
  /* VoogStyle
    "pathI18n": ["product_list", "product", "normal"],
    "titleI18n": "text_transform",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "uppercase",
      "off": "none"
    },
    "icon": "uppercase",
    "scope": "global"
  */
  --content-item-box__text-transform: none;
  /* VoogStyle
    "pathI18n": ["product_list", "product", "normal"],
    "titleI18n": "color",
    "type": "button",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global"
  */
  --content-item-box__color: #000;
}
